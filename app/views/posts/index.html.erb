<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <h1><%= link_to post.title, post_path(post) %></h1>

    <p><%= post.body %></p>

    <ul>
      <li><%= link_to "Edit", edit_post_path(post) %></li>
      <li><%= link_to "Destroy", post_path(post), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    </ul>
  <% end %>
</ul>

<%= link_to "New post", new_post_path %>